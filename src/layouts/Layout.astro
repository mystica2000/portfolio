---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Main from "@components/Main.astro";
import Meta from "@components/Meta.astro";

interface Props {
  title: string;
  description: string;
  content?: string;
}

const { title, description, content } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Meta title={title} description={description} content={content} />
  </head>
  <body>
    <Header />
    <Main>
      <slot />
    </Main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    line-height: 27px;
    -webkit-text-size-adjust: 100%; /* Prevent automatic text resizing on mobile devices */
    text-size-adjust: 100%;
    font-size: 1em;
  }
  :root {
    --content-width: 750px;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    --astro-bg-color: #000000;
  }

  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
  }

  html.dark {
    color: #fff;
    --astro-bg-color: #ffffff;
  }

  .navlink {
    text-underline-offset: 3px;
    color: #000000;
    margin-left: 0.1rem;
    margin-right: 0.5rem;
  }

  .navlink:hover,
  .navlink:active,
  .active {
    text-shadow:
      0px 0px #ff4f4f,
      -2px -1px 1em #ff6b6b,
      1px -1px 0em #4aff47;
  }

  .dark .navlink {
    color: #ffffff;
  }
  .dark .navlink:hover,
  .navlink:active,
  .active {
    text-shadow:
      1px 1px 50px #af8d8d,
      0 0 1em #ffffff,
      0 0 0.2em #2222ff;
  }

  pre {
    padding: 8px 16px;
    overflow: auto;
    border-radius: 4px;
  }

  code {
    border-radius: 4px;
    direction: ltr;
    font-size: 14px;
  }

  pre > code {
    line-height: 1.5;
    word-break: normal;
    white-space: pre;
    word-spacing: normal;
    tab-size: 4;
  }

  .scroll-header {
    scroll-margin-top: 100px;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex-grow: 1;
  }

  @media screen and (max-width: 440px) {
    .scroll-header {
      scroll-margin-top: 150px;
    }
  }

  body::before {
    background: radial-gradient(
        circle,
        transparent 90%,
        rgb(191 191 191 / 97%) 97%
      )
      0 0 / 20px 20px;

    background-size: 20px 20px;
    background-position: 20px 20px;

    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: -1;
  }

  .dark body::before {
    background: radial-gradient(circle, #000000 90%, rgb(40 40 40 / 87%) 97%) 0
      0 / 20px 20px;

    background-size: 20px 20px;
  }
</style>
