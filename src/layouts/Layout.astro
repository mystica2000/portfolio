---

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Main from '../components/Main.astro';
import { ViewTransitions } from 'astro:transitions';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ViewTransitions />
	</head>
	<body>
    <Header />
    <Main>
      <slot />
    </Main>
    <Footer/>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
    background: radial-gradient(circle, transparent 90%, rgb(225 225 225) 97%) 0 0 / 20px 20px;
    line-height: 27px;
	}
  :root {
   --content-width: 650px;
   box-sizing: border-box;
   margin: 0;
   padding: 0;
   --astro-bg-color: #000000;
 }

 body {
  margin: 0em;
 }

 html.dark {
  color: #fff;
  background: radial-gradient(circle, #000000 90%, rgb(40 40 40 / 87%) 97%) 0 0 / 20px 20px;
  --astro-bg-color: #ffffff;
 }

 .navlink {
    color: #000000;
  }

  .navlink:hover, .navlink:active, .active {
    text-shadow:  0px 0px #ff4f4f, -2px -1px 1em #ff6b6b, 1px -1px 0em #4aff47;
  }

  .dark .navlink { color: #ffffff; }
  .dark .navlink:hover, .navlink:active, .active { text-shadow: 1px 1px 2px #af8d8d, 0 0 1em #ffffff, 0 0 0.2em #2222ff; }

</style>
