---
import { Image } from "astro:assets";
interface Props {
  caption: string;
  src: ImageMetadata;
}

const { caption, src } = Astro.props;
---

<figure>
  <figcaption>
    <Image src={src} alt="" class:list={"img"} />
    {caption}
  </figcaption>
</figure>

<style>
  .img {
    width: 100%;
    height: fit-content;
    cursor: pointer;
  }
</style>
