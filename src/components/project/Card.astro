---
import type { ProjectSchema } from "@content/config";

interface Props {
 project: ProjectSchema
}

const { project } = Astro.props;
---

<tr class="project__card">
  <td class="border__line">{project.emoji} <a href={project.url} class="navlink" target="_blank">{project.name}</a></td>
  <td class="card__box">
    <ul>
      {
        project.description.map((desp) => (
          <li>{desp}</li>
        ))
      }
    </ul>
    { project.live && <a href={project.live} class="navlink" target="_blank">live</a> }
  </td>
</tr>

<style>

  .border__line {
    border-right: 2px solid rgb(229 229 229 / 72%);
    margin-top: 1em;
    margin-bottom: 1em;
    margin-right: 1em;
  }

  .project__card {
    width: 100%;
    border: 2px solid rgb(229 229 229 / 72%);
    min-height: 200px;
    max-height: 350px;
    overflow: auto;
    height: 100%;
    display: grid;
    background-color: #ffffff59;
    border-radius: 10px;
    grid-template-columns: 0.5fr 1fr;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    margin-bottom: 1.3em;
  }


  :global(.dark) .project__card {
    border: 2px solid rgb(59 54 54);
    background-color: #0a09093d;
    box-shadow: rgb(255 255 255 / 20%) 0px 7px 29px 0px;
  }

  :global(.dark) .border__line {
    border-color:rgb(59 54 54);
  }

  ul {
    margin: 0;
    margin-inline: 0;
    margin-block: 0;
    list-style: square;
    padding-inline-start: 0;
  }

  td {
    padding: 1em;
  }

  .card__box {
    display: grid;
    grid-template-rows: 2fr 0.5fr;
  }

</style>