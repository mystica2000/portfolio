---
import { getCollection } from "astro:content";
const skills = await getCollection("skills");
---

<section>
  <h3>Skills</h3>

  {
    skills.map((aSkill) => (
      <div>
        <span class="highlight">{aSkill.id + ": "}</span>
        {aSkill.data.map((skill, index) => (
          <Fragment>
            &nbsp;
            <a href={skill.url} class="socials ">
              {skill.name}
            </a>
            &nbsp;
            {index == aSkill.data.length - 1 ? " " : "/"}
          </Fragment>
        ))}
      </div>
    ))
  }
</section>

<style>
  a {
    color: #000000;
  }

  a:hover,
  a:active {
    text-shadow:
      0px 0px #ff4f4f,
      -2px -1px 1em #ff6b6b,
      1px -1px 0em #000000;
  }

  :global(.dark) .socials {
    color: #c9e79a;
  }

  .highlight {
    font-weight: 500;
    background: linear-gradient(90deg, #ff6f61, #d74b77);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
