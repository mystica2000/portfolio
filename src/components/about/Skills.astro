---
import { getCollection } from "astro:content";
import type { SkillSchema } from "@content/config";
const skillsCollection = await getCollection('skills');

const skills:SkillSchema = skillsCollection[0].data;
---
<h3>Skills</h3>

{
  Object.keys(skills).map((aSkillName) => (
    <div><span class="highlight">{aSkillName + ": "}</span>
    {
        skills[aSkillName].map((skill, index) => (
          <Fragment>
          &nbsp;<a href={skill.url} class="socials">{skill.name}</a> { index == skills[aSkillName].length -1  ? '' : '/'}
        </Fragment>
        ))
    }
</div>
  ))
}


<style>

  a {
    color: #000000;
  }

  a:hover, a:active {
    text-shadow:  0px 0px #ff4f4f, -2px -1px 1em #ff6b6b, 1px -1px 0em #000000;
  }

  a::after {
    content: 'â†—';
  }

  :global(.dark) .socials { color: #B39DDB; }

  .highlight {
    font-weight: 500;
    background: linear-gradient(90deg, #ff6f61, #d74b77);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>