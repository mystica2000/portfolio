---
import { Image } from 'astro:assets';

interface Props {
  alt: string;
  src: string;
}

const { alt, src } = Astro.props;
---

<Image src={src} alt={alt} class:list={"img"}/>

<style>
  .img {
    width: -webkit-fill-available;
    width: -moz-available;
    height: fit-content;
    cursor: pointer;
  }
</style>