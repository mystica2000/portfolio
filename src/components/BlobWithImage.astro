---
import ImageView from "./ImageView.astro";
import Mystica from "@assets/images/others/cropped.png";
---

<div class="pfp-container">
  <ImageView src={Mystica} alt="mystica picture" pfp={true} />
</div>

<style>
  .pfp-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-image: url(/src/assets/images/others/outline.svg);
    background-position-y: center;
    padding: 1em;

    background-repeat: no-repeat;
    padding: 1em;
    background-origin: padding-box;
    background-position: center;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0);
    }

    50% {
      transform: translateY(-5px);
    }

    100% {
      transform: translateY(0);
    }
  }
</style>
