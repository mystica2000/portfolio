---
import { Image } from 'astro:assets';

interface Props {
  alt: string;
  src: ImageMetadata;
  pfp?: boolean
}

const { alt, src, pfp = false } = Astro.props;
---

<Image src={src} alt={alt} class:list={["img", {pfpImg: pfp == true}  ]}/>

<style>
  .img {
    width: -webkit-fill-available;
    width: -moz-available;
    height: fit-content;
    cursor: pointer;
  }

  .pfpImg {
    width: 190px;
    height: 190px;
    object-fit: cover;
    object-position: 10% 35%;
    border-radius: 50%;
    cursor:default;
    padding-top: 1.7em;
    padding-left: 1.7em;
  }
</style>